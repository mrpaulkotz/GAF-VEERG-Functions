Fuel_GetTransportFuelString
=LAMBDA(
    Cell,
    LEFT(Cell, FIND(", ",Cell) -1)
);

Fuel_GetStationaryFuelString
=LAMBDA(
    Cell,
    RIGHT(Cell,LEN(Cell)-FIND(", ",Cell))
);

Fuel_TotalConsumption
= LAMBDA(
    FuelConsumptionArray, FuelUseArray, FuelUse, FuelTypeArray, FuelType,
    IFERROR(
    SUM(
      FILTER(
        FuelConsumptionArray,
        (FuelTypeArray = FuelType) * 
        (FuelUseArray = FuelUse)
      )
    ),
    0
  )
);